            padding-left: 20px;
          }

          #eventSection h1 {
            color: blue;
          }

          h2 {
            margin-left: 10px;
          }



          .checkbox-group {
            display: flex;
            flex-wrap: wrap;
          }

          .row {
            display: flex;
            flex-wrap: wrap;

            /* Adjust as needed */
          }

          .styled-checkbox {
            position: absolute;
            top: 4px;

          }

          .checkbox-label {
            margin-right: 20px;
            margin-bottom: 10px;
            position: relative;

            /* Adjust as needed */
          }

          #checkcontent {
            width: 110px;
            margin-left: 30px;
            display: inline-block;
          }



          .submit-button {
            background-color: rgb(5, 251, 5);
            font-size: 16px;
            color: white;
          }


          /*     erro messagge  */
          /* CSS for displaying error message */




          /*--------------- error box------------- */
          .overlay {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0, 0, 0, 0.7);
            height: 100vh;
            overflow: hidden;




          }



          .popup {
            position: relative;
            margin: 70px auto;
            padding: 20px;
            background: #f11b1b;
            border-radius: 5px;
            width: 20rem;

            transition: all 5s ease-in-out;
          }

          .popup .close {
            position: absolute;
            top: 10px;
            right: 30px;
            transition: all 200ms;
            font-size: 30px;
            font-weight: bold;
            text-decoration: none;
            color: white;
          }

          .popup .close:hover {
            color: orange;
          }

          .popup .content {

            overflow: auto;
            color: white;
            font-weight: bold;
          }




